{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "configure-module input",
    "$id": "http://schema.nethserver.org/passbolt/configure-module-input.json",
    "description": "Configure passbolt",
    "examples": [
        {
            "host": "passbolt.gs.nethserver.net",
            "admin_email": "admin@example.com",
            "lets_encrypt": true 
        }
    ],
    "type": "object",
    "required": [
        "host",
        "lets_encrypt",
        "admin_email"
      ],
      "properties": {
        "host": {
          "description": "Host name for Passbolt, like 'passbolt.nethserver.org'",
          "format": "hostname",
          "pattern": "\\.",
          "type": "string",
          "minLength": 1
        },
        "admin_email": {
          "description": "The mail address of the administrator user",
          "format": "idn-email"
        },
	      "lets_encrypt": {
          "type": "boolean",
          "title": "Let's Encrypt certificate",
          "description": "Request a valid Let's Encrypt certificate."
        }
    }
}